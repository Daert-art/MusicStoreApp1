<Window x:Class="MusicStoreApp1.Views.EditReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicStoreApp1.Views"
        mc:Ignorable="d"
        Title="Редагування резервування" Height="200" Width="300">

    <!-- Основна сітка для компонування елементів -->
    <Grid>
        <!-- StackPanel для вертикального розміщення елементів -->
        <StackPanel Margin="10">

            <!-- Мітка та поле для введення кількості зарезервованих платівок -->
            <Label Content="Кількість зарезервованих платівок" />
            <TextBox Text="{Binding QuantityReserved}" />

            <!-- Кнопка для збереження змін -->
            <Button Content="Зберегти" Click="SaveButton_Click" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
